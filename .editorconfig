# The file helps enforce consistent general coding styles across different IDEs. Most modern IDEs have built-in support.

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 4
charset = utf-8

[*.md]
indent_size = 2

[*.yml]
indent_size = 2

[*.json]
indent_size = 2
